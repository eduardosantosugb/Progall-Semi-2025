<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo claro para el panel -->
    <solid android:color="@color/background" />
    <!-- Borde con color secundario -->
    <stroke
        android:width="1dp"
        android:color="@color/colorSecondary" />
    <!-- Esquinas redondeadas para suavizar el contenedor -->
    <corners android:radius="8dp" />
    <!-- Relleno interno para separar el contenido del borde -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
