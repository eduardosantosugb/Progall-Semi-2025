<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/svAdministrarCajeros"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/llAdministrarCajeros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTituloAdministrarCajeros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Administración de Cajeros"
            android:textSize="24sp"
            android:textColor="@color/red_primary"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Campo para ingresar el nombre del nuevo cajero -->
        <EditText
            android:id="@+id/etNuevoCajero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:hint="Nombre del nuevo cajero"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="@color/black" />

        <!-- Botón para agregar el nuevo cajero -->
        <Button
            android:id="@+id/btnAgregarCajero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Cajero"
            android:textColor="@color/black"
            android:backgroundTint="@color/red_primary"
            android:layout_marginTop="8dp" />

        <!-- ListView para mostrar la lista de cajeros existentes -->
        <ListView
            android:id="@+id/lvCajeros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
