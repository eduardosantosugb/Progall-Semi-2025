<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background"> <!-- Opcional: añadir un color de fondo -->

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"> <!-- Padding inferior para que el último botón no quede pegado -->

        <!-- Mensaje de Bienvenida -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido a CuadraSmart"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/textColorPrimary"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Botón para alternar la vista de rol -->
        <Button
            android:id="@+id/btnToggleRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cambiar a Cajero"
            style="@style/CustomButton"
            android:layout_marginBottom="8dp" />

        <!-- Botón para Cambiar Tienda (Nuevo) -->
        <Button
            android:id="@+id/btnCambiarTienda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Otra Tienda"
            style="@style/CustomButton"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/> <!-- Margen inferior antes de la lista de módulos -->

        <!-- Separador visual (Opcional) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="16dp"/>

        <!-- Botones para navegar a los módulos -->
        <Button
            android:id="@+id/btnRegistroTurno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_shift"
            style="@style/CustomButton"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnHistorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/history"
            style="@style/CustomButton"
            android:layout_marginTop="8dp"/>

        <!-- Los siguientes botones se mostrarán sólo en modo supervisor -->
        <Button
            android:id="@+id/btnReportes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reports"
            style="@style/CustomButton"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnAdministrarCajeros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/manage_cashiers"
            style="@style/CustomButton"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnAdministrarTiendas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/manage_stores"
            style="@style/CustomButton"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnChatPrivado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/private_chat"
            style="@style/CustomButton"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>