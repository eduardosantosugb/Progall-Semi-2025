<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo de la aplicación -->
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/logo_nuevo1"
        android:contentDescription="@string/app_name"
        android:layout_marginBottom="24dp" />

        <!-- Mensaje de bienvenida -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido a CuadraSmart"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp" />

        <!-- Botón Registro de Turno -->
        <Button
            android:id="@+id/btnRegistroTurno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro de Turno"
            android:textColor="@color/black"
            android:backgroundTint="@color/red_primary"
            android:layout_marginBottom="16dp" />

        <!-- Botón Historial -->
        <Button
            android:id="@+id/btnHistorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historial"
            android:textColor="@color/black"
            android:backgroundTint="@color/red_primary"
            android:layout_marginBottom="16dp" />

        <!-- Botón Reportes -->
        <Button
            android:id="@+id/btnReportes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reportes"
            android:textColor="@color/black"
            android:backgroundTint="@color/red_primary"
            android:layout_marginBottom="16dp" />

        <!-- Botón Administración de Cajeros -->
        <Button
            android:id="@+id/btnAdministrarCajeros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Administrar Cajeros"
            android:textColor="@color/black"
            android:backgroundTint="@color/red_primary"
            android:layout_marginBottom="16dp" />

        <!-- Botón Cerrar Sesión -->
        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            android:textColor="@color/black"
            android:backgroundTint="@color/grey_primary" />

    </LinearLayout>
</ScrollView>

