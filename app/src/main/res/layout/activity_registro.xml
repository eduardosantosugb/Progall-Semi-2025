<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollRegistro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/llRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Fecha -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha:"/>

        <EditText
            android:id="@+id/etFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:hint="Selecciona la fecha"
            android:minHeight="48dp" />

        <!-- Hora de Inicio -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora de Inicio:"/>

        <EditText
            android:id="@+id/etHoraInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:hint="Selecciona la hora de inicio"
            android:minHeight="48dp" />

        <!-- Hora de Cierre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora de Cierre:"/>

        <EditText
            android:id="@+id/etHoraCierre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:hint="Selecciona la hora de cierre"
            android:minHeight="48dp" />

        <!-- Inicio de Descanso -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inicio de Descanso:"/>

        <EditText
            android:id="@+id/etInicioDescanso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:hint="Selecciona el inicio de descanso"
            android:minHeight="48dp" />

        <!-- Fin de Descanso -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fin de Descanso:"/>

        <EditText
            android:id="@+id/etFinDescanso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:hint="Selecciona el fin de descanso"
            android:minHeight="48dp" />

        <!-- Número de Caja -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número de Caja:"/>

        <EditText
            android:id="@+id/etNumeroCaja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresa el número de caja"
            android:inputType="number"
            android:minHeight="48dp" />

        <!-- Selección de Cajero -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cajero:"/>

        <Spinner
            android:id="@+id/spinnerCajero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp" />

        <!-- Montos y Ventas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Montos y Ventas:"/>

        <EditText
            android:id="@+id/etBilletes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Billetes"
            android:inputType="numberDecimal"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etMonedas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Monedas"
            android:inputType="numberDecimal"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etCheques"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cheques (opcional)"
            android:inputType="numberDecimal"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etVentasEsperadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ventas esperadas"
            android:inputType="numberDecimal"
            android:minHeight="48dp" />

        <!-- Botón para calcular discrepancia -->
        <Button
            android:id="@+id/btnCalcularDiscrepancia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular Discrepancia"
            android:layout_marginTop="8dp"/>

        <!-- Discrepancia -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discrepancia:"/>

        <EditText
            android:id="@+id/etDiscrepancia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:hint="Discrepancia calculada"
            android:inputType="numberDecimal"
            android:minHeight="48dp" />

        <!-- Panel de Justificación (oculto inicialmente) -->
        <LinearLayout
            android:id="@+id/llJustificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Justificación:"/>
            <EditText
                android:id="@+id/etJustificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese la justificación"/>
            <!-- Botón para adjuntar evidencia -->
            <Button
                android:id="@+id/btnAdjuntarEvidencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adjuntar Evidencia"
                android:layout_marginTop="4dp"/>

            <!-- ImageView para mostrar la evidencia -->
            <ImageView
                android:id="@+id/ivEvidencia"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:contentDescription="Evidencia adjunta"/>

        </LinearLayout>

        <!-- Botón para guardar registro -->
        <Button
            android:id="@+id/btnGuardarRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Registro"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
