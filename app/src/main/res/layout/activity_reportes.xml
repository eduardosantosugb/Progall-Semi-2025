<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llReportes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Secci칩n de filtros -->
    <LinearLayout
        android:id="@+id/llFiltros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- EditText para filtrar por fecha (al pulsar se muestra DatePicker) -->
        <EditText
            android:id="@+id/etFiltroFecha"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Filtrar por fecha"
            android:focusable="false"
            android:clickable="true"
            android:minHeight="48dp"
            android:padding="8dp"
            android:background="@drawable/edittext_bg"
            android:textColor="@color/textColorPrimary"/>

        <!-- Spinner para seleccionar cajero -->
        <Spinner
            android:id="@+id/spinnerFiltroCajero"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:padding="8dp"
            android:background="@drawable/spinner_bg"/>
    </LinearLayout>

    <!-- Bot칩n para aplicar filtro -->
    <Button
        android:id="@+id/btnFiltrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filtrar"
        style="@style/CustomButton"
        android:layout_marginBottom="16dp"/>

    <!-- BarChart para mostrar el gr치fico de reporte -->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"/>

    <!-- Bot칩n para generar el PDF -->
    <Button
        android:id="@+id/btnGenerarPDF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generar PDF"
        style="@style/CustomButton"/>
</LinearLayout>
