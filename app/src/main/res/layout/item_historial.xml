<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/white">

    <!-- Informaci贸n General: Fecha, Horarios, Caja, Cajero y Tienda -->
    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha: "
        android:textStyle="bold"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvHorarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrada: / Salida:"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvCajaCajero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caja: / Cajero:"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tienda: "
        android:textColor="@color/black" />

    <!-- Discrepancia y Estado -->
    <TextView
        android:id="@+id/tvDiscrepancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discrepancia: "
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado: "
        android:textColor="@color/black" />

    <!-- Justificaci贸n -->
    <TextView
        android:id="@+id/tvJustificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Justificaci贸n: "
        android:textColor="@color/black"
        android:visibility="gone" />

    <!-- Imagen de Evidencia -->
    <ImageView
        android:id="@+id/ivEvidencia"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:layout_marginTop="4dp" />

    <!-- Bot贸n para editar registro -->
    <Button
        android:id="@+id/btnEditarRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:textColor="@color/black"
        android:backgroundTint="@color/red_primary"
        android:layout_marginTop="8dp" />
</LinearLayout>
