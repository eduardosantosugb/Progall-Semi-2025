<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <!-- Nombre de la tienda -->
    <TextView
        android:id="@+id/tvTiendaNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Nombre de la tienda"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginEnd="8dp"/>

    <!-- Botón para editar -->
    <ImageButton
        android:id="@+id/btnEditarTienda"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_edit"
        android:contentDescription="Editar tienda"
        android:layout_marginEnd="8dp"/>

    <!-- Botón para eliminar -->
    <ImageButton
        android:id="@+id/btnEliminarTienda"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_delete"
        android:contentDescription="Eliminar tienda" />
</LinearLayout>