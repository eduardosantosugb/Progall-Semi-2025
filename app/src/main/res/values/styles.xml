<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema base de la aplicación -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Color primario: Azul oscuro -->
        <item name="colorPrimary">#2C3E50</item>
        <!-- Color primario oscuro para la barra de estado -->
        <item name="colorPrimaryDark">#1A252F</item>
        <!-- Color de acento: Dorado -->
        <item name="colorAccent">#F1C40F</item>
        <!-- Color de fondo de la aplicación -->
        <item name="android:colorBackground">#ECF0F1</item>
        <!-- Color principal para textos -->
        <item name="android:textColorPrimary">#212121</item>
        <!-- Fondo de ventana -->
        <item name="android:windowBackground">#FFFFFF</item>
    </style>

    <!-- Estilo para redondear las esquinas de ShapeableImageView -->
    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Estilo para superponer en el AppBarLayout -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <!-- Puedes personalizar este estilo si es necesario -->
    </style>

    <!-- Opcional: Si utilizas un popup -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
