<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ugb.cuadrasmart">

    <!-- Permisos necesarios -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />


    <!-- Declara que la c치mara es opcional -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Configuraci칩n del FileProvider para compartir archivos (im치genes, PDFs, etc.) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.ugb.cuadrasmart.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Actividad de inicio (Login) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Otras actividades de la aplicaci칩n -->
        <activity android:name=".TiendasActivity" android:exported="false" />
        <activity android:name=".RegistroTurnoActivity" android:exported="false" />
        <activity android:name=".EditRegistroActivity" android:exported="false" />
        <activity android:name=".HistorialActivity" android:exported="false" />
        <activity android:name=".ReportesActivity" android:exported="false" />
        <activity android:name=".ChatPrivadoActivity" android:exported="false" />
        <activity android:name=".RegistroCajeroActivity" android:exported="false" />
        <activity android:name=".RegistroSupervisorActivity" android:exported="false" />
        <activity android:name=".AdministrarCajerosActivity" android:exported="false" />
        <activity android:name=".AdministrarTiendasActivity" android:exported="false" />
        <activity android:name=".DashboardActivity" android:exported="false" />
    </application>
</manifest>
